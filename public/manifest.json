{
  "manifest_version": 3,
  "name": "334 Clock",
  "default_locale": "ja",
  "version": "1.0",
  "description": "最小 1 ms から調整できるリューズが備わっているミリ秒時計です。",
  "author": "Shimizu",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_title": "334 Clock"
  }
}
